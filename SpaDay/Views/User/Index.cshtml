@model List<SpaDay.Models.User>

<h1>Welcome to our spa!</h1>

<p>
    <a asp-controller="User" asp-action="Add">Add User</a>
</p>

<p>
    <a asp-controller="Spa" asp-action="Index">Select Spa Services</a>
</p>

@if (Model.Count == 0)
{
    <p>No users yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
            </tr>
        }
    </table>
}
